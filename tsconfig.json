{
  "compilerOptions": {
    "target": "ES6",
    "useDefineForClassFields": true,
    "module": "ES2020",
    "lib": ["ESNext", "DOM"],
    "types": ["@types/node"],
    "moduleResolution": "Node",
    "strict": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "noEmit": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "experimentalDecorators": true,
    "plugins": [
      { "name": "typescript-lit-html-plugin" }
    ],
    "baseUrl": ".",
    "paths": {
      "~/*": ["source/*"]
    }
  },
  "include": ["./source", "source/vite-env.d.ts", "tests/app.spec.ts"]
}
